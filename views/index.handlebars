<script>
$(document).ready(function(){

	//Login Image
	$(".profilepic").click(function(){
		var src = $(this).attr("src")

	$("#mainimage").attr("src",src)
		console.log(src)
	})

	//Login name
	$("#playerName").keyup(function(){
		$("#name").text($(this).val())
		
	})

})

</script>