<head>
	<link rel="stylesheet" href="/styles/indexStyles.css" media="screen" title="no title" charset="utf-8">
</head>

<div id="home">
	<div class="container">
	
		<!-- The Modal -->
		<div class="modal" id="myModal">
			<div class="modal-dialog">
				<div class="modal-content">

					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title"></h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>

					<!-- Modal body -->
					<div class="modal-body">
						<div class="login100-form-avatar">
						<img src="images/kingIcon.jpg" class ="profilepic" alt="AVATAR" type="button" data-toggle="modal" data-target="#myModal" data-num="1">
						</div>
						<div class="login100-form-avatar">
						<img src="images/queenIcon.jpg" class ="profilepic" alt="AVATAR" type="button" data-toggle="modal" data-target="#myModal" data-num="2">
						</div>
						<div class="login100-form-avatar">
						<img src="images/jesterIcon.jpg" class ="profilepic" alt="AVATAR" type="button" data-toggle="modal" data-target="#myModal" data-num="3">
						</div>


						<div class="container-login100-form-btn p-t-10">
							{{!-- <button href="/classes" class="login100-form-btn" id="playerNameSubmit">
								Submit
							</button> --}}
							<a href="/auth/google">Login</a>

						</div>
						<div class="login100-form-avatar">
						<img src="images/priestIcon.jpg" class ="profilepic" alt="AVATAR" type="button" data-toggle="modal" data-target="#myModal" data-num="5">
						</div>
						<div class="login100-form-avatar">
						<img src="images/wizardIcon.jpg" class ="profilepic" alt="AVATAR" type="button" data-toggle="modal" data-target="#myModal" data-num="6">
						</div>
					</div>

					<!-- Modal footer -->
					<div class="modal-footer">
						<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
					</div>

				</div>
			</div>
		</div>

		<!-- Login Section -->
		<div class="container-login100">
			<div class="wrap-login100 p-t-190 p-b-30">
				<form class="login100-form validate-form">
					<!-- Image Profile -->
					<div class="login100-form-avatar">
						<img src="images/avatar-01.png" id="mainimage" alt="AVATAR" type="button" data-toggle="modal" data-target="#myModal">
					</div>


					<span class="login100-form-title p-t-20 p-b-45" id="name">
						
					</span>

					<div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
						<input class="input100" type="text" name="username" placeholder="Username" id='playerName'>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user"></i>
						</span>
					</div>

					<div class="container-login100-form-btn p-t-10">
						<button href="/classes" class="login100-form-btn" id="playerNameSubmit">
							Submit
						</button>
					</div>

					<div class="text-center w-full">
						<a class="txt1" href="#">
							Challenge yourself everyday to be better!
							<i class="fa fa-long-arrow-right"></i>
						</a>
					</div>
				</form>
			</div>
		</div>

	</div>
</div>


